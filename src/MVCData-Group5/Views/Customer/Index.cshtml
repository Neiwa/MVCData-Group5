
@{
    ViewBag.Title = "Index";
}

<div class="col-md-6 col-md-offset-2">
    <h2>Select a customer to view orders for</h2>

    @using (Html.BeginForm("Orders", "Customer", FormMethod.Get))
    {
        @Html.DropDownList("email", (SelectList)ViewBag.CustomerSL, htmlAttributes: new { @class = "form-control" })
        <button type="submit" class="btn btn-default">View</button>
    }
</div>